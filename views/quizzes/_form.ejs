<div class="form-group">
  <label for="question" class="col-sm-2 control-label text-right">Pregunta</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="question" value="<%=quizz.pregunta%>" name="quizz[pregunta]">
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    &nbsp;    
  </div>
</div>

<div class="form-group">
  <label for="answer" class="col-sm-2 control-label text-right">Respuesta</label>
  <div class="col-sm-10">
    <input type="text" class="form-control" id="answer" value="<%=quizz.respuesta%>" name="quizz[respuesta]">
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    &nbsp;    
  </div>
</div>

<div class="form-group">
  <label for="tema" class="col-sm-2 control-label text-right">Tema</label>
  <div class="col-sm-10">
    <select name="quizz[tema]" class="form-control">
      <option value="-" selected>Escoja un tema</option>
      <option value="Humanidades">Humanidades</option>
      <option value="Ocio">Ocio</option>
      <option value="Ciencia">Ciencia</option>
      <option value="Tecnologia">Tecnologia</option>
    </select>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    &nbsp;    
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-2">
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-save" aria-hidden="true"></span> Guardar Cambios</button>
  </div>
  <div class="col-sm-2 pull-right">
    <a href="/quizzes"><button type="button" class="btn btn-danger">Volver</button></a>
  </div>
</div>