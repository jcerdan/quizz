<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-primary">
		  <div class="panel-heading">Búsqueda</div>
		  <div class="panel-body">
		    <form name="buscaPreguntaForm" action="/quizzes" method="GET">
					<div class="form-group">
						<label for="search">Términos de búsqueda</label>
						<input type="text" value="" class="form-control" name="search" placeholder="Indique los términos que desea buscar">
					</div>
					<button type="submit" class="btn btn-default">Enviar</button>
				</form>
		  </div>
		</div>
	</div>	
</div>

<div class="row">&nbsp;</div>

<div class="row">
	<div class="col-xs-12">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Pregunta</th>
						<th>Tema</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% var i; for (i=0; i< quizzes.length; i++){ %>
					<tr>
						<td><%= i + 1 %></td>
						<td><a href="/quizzes/<%= quizzes[i].id %>"><%= quizzes[i].pregunta %></a></td>
						<td><%= quizzes[i].tema %></td>
						<td>
							<button class="btn btn-info" onclick="document.location='/quizzes/<%=quizzes[i].id%>/edit'"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar</button></td>
						<td>
							<form action="/quizzes/<%= quizzes[i].id %>?_method=delete" method="POST">
								<button type="submit" class="btn btn-danger" onclick="return confirm('Seguro que quieres borrar <%=quizzes[i].pregunta%>?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Borrar</button>
							</form>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<a href="/quizzes/new">Crear nuevo Quizz</a>	
	</div>
</div>



